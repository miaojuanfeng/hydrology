<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="gov.gz.hydrology.mapper.write.PlanDao" >
	<resultMap id="BaseResultMap" type="gov.gz.hydrology.entity.write.Plan" >
		<id column="id" property="id"/>
		<result column="stcd" property="stcd"/>
		<result column="name" property="name"/>
		<result column="model" property="model"/>
        <result column="e" property="e"/>
        <result column="wm" property="wm"/>
        <result column="wum" property="wum"/>
        <result column="wlm" property="wlm"/>
        <result column="r" property="r"/>
        <result column="c" property="c"/>
        <result column="b" property="b"/>
        <result column="im" property="im"/>
        <result column="sm" property="sm"/>
        <result column="ex" property="ex"/>
        <result column="ki" property="ki"/>
        <result column="kg" property="kg"/>
        <result column="ci" property="ci"/>
        <result column="cg" property="cg"/>
        <result column="cs" property="cs"/>
        <result column="lag" property="lag"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
	</resultMap>
	<select id="selectWarning" resultMap="BaseResultMap">
		select top 10 w.*, s.stname as stname from warning w
		left join station s on w.stcd = s.stcd
		where 1=1
		<if test="stcd != null and stcd != ''" >
			and w.stcd = #{stcd}
		</if>
		order by w.tm desc
	</select>
    <select id="selectNotice" resultType="java.lang.Integer">
        select count(1) from warning w
        left join station s on w.stcd = s.stcd
        where 1=1
        <if test="stcd != null and stcd != ''" >
            and w.stcd = #{stcd}
        </if>
    </select>
	<insert id="insertBatch" parameterType="java.util.List">
		<foreach collection="list" item="item" index="index">
			if not exists (select 1 from warning where stcd = #{item.stcd} and tm = #{item.tm} and type = #{item.type})
				insert into warning
				(stcd,tm,z,type)
				values
				(#{item.stcd},#{item.tm},#{item.z},#{item.type})
		</foreach>
	</insert>
</mapper>